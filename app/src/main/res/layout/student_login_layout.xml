<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/stulogin"
    android:layout_height="match_parent">
    <!--   学生登录界面-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/manager_layout_pic"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/student_photo"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tt2"
        android:layout_below="@+id/manager_layout_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textColor="@color/grey_text"
            android:paddingLeft="9.0dip"
            android:maxLines="1"
            android:hint="请输入学号"
            android:gravity="center"
            android:background="@drawable/input_box"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/manager_layout_pic"
            android:id="@+id/student_login_ID_input"
            android:layout_width="match_parent"
            android:layout_height="50dp" />


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tt3"
        android:layout_below="@+id/tt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:textColor="@color/grey_text"
            android:paddingLeft="9.0dip"
            android:maxLines="1"
            android:hint="请输入密码"
            android:inputType="numberPassword"
            android:gravity="center"
            android:background="@drawable/input_box"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tt2"
            android:id="@+id/student_login_pass_input"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/student_login"
        style="@style/common_button_style"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tt3"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="登录" />


</RelativeLayout>